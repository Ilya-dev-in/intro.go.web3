{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go"
        },
        {
            "name": "webapp",
            "type": "node-terminal",
            "request": "launch",
            "command": "ng serve --proxy-config proxy.conf.json",
            "cwd": "${workspaceFolder}\\webapp"
        },
        {
            "name": "Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}\\webapp"
        },
    ]
}